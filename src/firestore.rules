rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================================================
    // GAMES COLLECTION - Public read, controlled write
    // ============================================================================
    match /games/{gameId} {
      // Anyone can read game data (public trivia games)
      allow read: if true;
      
      // Only authenticated users can create games
      allow create: if request.auth != null 
        && request.resource.data.adminId == request.auth.uid
        && request.resource.data.status == "lobby";
      
      // Controlled updates - admins can update games, players can update team data
      allow update: if request.auth != null 
        && (
          // Game admin can update most fields
          (resource.data.adminId == request.auth.uid) ||
          
          // Players can update their own player data within a team
          (request.resource.data.teams[0].players[0].id == request.auth.uid)
        );
      
      // Only admins can delete games
      allow delete: if request.auth != null 
        && resource.data.adminId == request.auth.uid;
    }
    
    // ============================================================================
    // ADMINS COLLECTION - Restricted access
    // ============================================================================
    match /admins/{adminId} {
      // Users can read their own admin record
      allow read: if request.auth != null 
        && request.auth.uid == adminId;
      
      // Super admins can read all admin records
      allow read: if request.auth != null 
        && request.auth.uid in ['eEPycxZHbrbUaomlMmppQiHJETs2'];
      
      // New admin signup - limited creation
      allow create: if request.auth != null 
        && request.auth.uid == adminId
        && request.resource.data.status == "pending";
      
      // Super admins can update any admin record
      allow update: if request.auth != null
        && request.auth.uid in ['eEPycxZHbrbUaomlMmppQiHJETs2'];
      
      // Only super admins can delete admin records
      allow delete: if request.auth != null 
        && request.auth.uid in ['eEPycxZHbrbUaomlMmppQiHJETs2'];
    }

    // ============================================================================
    // INDIVIDUAL GAMES (from plan)
    // ============================================================================
     match /individual_games/{gameId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        (resource.data.status == 'waiting' || 
         request.auth.uid in resource.data.adminIds);
    }
    
    match /individual_players/{playerId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.playerId;
      
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.playerId;
    }
    
    match /individual_questions/{questionId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }
    
    match /individual_lands/{landId} {
      allow read: if true;
      allow update: if request.auth != null && 
        resource.data.playerId == null; 
    }
    
    match /individual_leaderboard/{entryId} {
      allow read: if true;
      allow create: if request.auth != null;
    }
  }
}
